version: '3.8' 
services:
  db:
    image: mysql:5.7
    container_name: mysqldb
    cap_add:
      - SYS_NICE
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: 'secret-pass'
      MYSQL_DATABASE: 'students'
      MYSQL_USER: 'user'
      MYSQL_PASSWORD: 'secret-pass'
    ports:
      - '3306:3306'
    volumes:
      - ./db_init:/docker-entrypoint-initdb.d
      - db:/var/lib/mysql
  web:
    image: jviguerasfortinet/xpertsummit22:php-xs22
    container_name: frontweb
    restart: always
    environment:
      DBHOST: 'mysqldb'
      DBUSER: 'root'
      DBNAME: 'students'
      DBTABLE: 'students'
      DBPORT: '3306'
      DBPASS: 'secret-pass'
    depends_on:
      - db
    volumes:
      - ./web_init:/var/www
    ports:
      - "8000:80"
    stdin_open: true
    tty: true
  phpmyadmin:
    image: phpmyadmin
    container_name: phpmyadmin
    restart: always
    ports:
      - 8001:80
    environment:
      - PMA_ARBITRARY=1
  checkscript:
    image: jviguerasfortinet/xpertsummit22:python-xs22
    container_name: checkscript
    restart: always
    environment:
      DBHOST: 'mysqldb'
      DBUSER: 'root'
      DBNAME: 'students'
      DBTABLE: 'students'
      DBPORT: '3306'
      DBPASS: 'secret-pass'
    depends_on:
      - db
volumes:
  db:
    driver: local
  